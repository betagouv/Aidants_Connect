{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "url": [
        "http://localhost:8000/guide_utilisation/",
        "http://localhost:8000/habilitation/",
        "http://localhost:8000/habilitation/demandeur/",
        "http://localhost:8000/mentions-legales/",
        "http://localhost:8000/politique_confidentialite/",
        "http://localhost:8000/ressources/",
        "http://localhost:8000/stats/",
        "http://localhost:8000/temoignages/"
      ],
      "settings": {
        "onlyCategories": ["accessibility"],
        "skipAudits": ["uses-https"],
        "chromeFlags": ["--headless", "--no-sandbox", "--disable-web-security"]
      }
    },
    "assert": {
      "assertions": {
        "categories:accessibility": ["error", { "minScore": 0.95 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
